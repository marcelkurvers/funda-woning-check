{
    "manifest_version": 3,
    "name": "Multi-Check Pro: Funda Link",
    "version": "5.0.0",
    "description": "Extract data and media from Funda.nl for Multi-Check Pro analysis.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "management"
    ],
    "host_permissions": [
        "https://*.funda.nl/*",
        "https://funda.nl/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.funda.nl/*",
                "https://funda.nl/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}